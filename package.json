{
  "name": "room-creator",
  "version": "0.0.1",
  "repository": "https://github.com/AntonWork/room-creator",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start:client": "cd packages/client && yarn start",
    "build:client": "cd packages/client && yarn build",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "fix": "yarn lint && git update-index --again && pretty-quick --staged",
    "deploy": "yarn build:client && firebase deploy"
  },
  "dependencies": {
    "@types/node": "14.14.8",
    "cross-env": "7.0.2",
    "ts-node": "9.0.0",
    "typescript": "4.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "eslint": "7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "4.3.0",
    "prettier": "2.1.2",
    "pretty-quick": "3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fix"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "workspaces": [
    "packages/*"
  ]
}
